<div id="home"></div>
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <div class="jumbotron">
          <h1 class="animate__animated animate__headShake" "display-4">Quarantine Cocktails!</h1>
          <p class="lead, text-center">A site to search, generate random, and add your own cocktails!</p>
          <hr class="my-4">

        </div>
        <div class="card">
          <div class="card-body">
            <h3>Add Cocktail</h3>
            <form class="clearfix mb-4" action="POST">
              <div class="form-group">
                <label for="example-text">Drink Name</label>
                <input type="text" id="example-name" class="form-control" aria-describedby="example-text"
                  placeholder="Martini">
              </div>

              <div class="form-group">
                <label for="example-ingredients">Drink Ingredients</label>
                <textarea class="form-control" id="example-ingredients" aria-describedby="example-description"
                  placeholder="Vodka/Gin, Vermouth, Olive"></textarea>
              </div>
            

              <div class="form-group">
                <label for="example-instructions">Instructions</label>
                <textarea class="form-control" id="example-instructions" aria-describedby="example-instruction"
                  placeholder="Pour all ingredients into mixing glass with ice cubes...."></textarea>
              </div>
                <button id="submit" class="btn btn-primary float-right">Submit</button>
              </form>
            </form>
          </div>
        </div>
        
        <div class="card">
          <div class="card-body">
            <h3>Your Recipe:</h3>
            <ul id="example-list" class="list-group">
              {{#each examples}}
              <li data-id="{{this.id}}" class="list-group-item">
                <a href="example/{{this.id}}">{{this.name}}</a>
                <button class="btn btn-danger float-right delete">ï½˜</button>
              </li>
              {{/each}}

            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

